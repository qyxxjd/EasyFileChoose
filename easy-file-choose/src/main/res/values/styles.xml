<resources>
    <style name="EasyFileChoose" />

    <style name="EasyFileChoose.Theme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/EasyFileChooseColorPrimary</item>
        <item name="colorPrimaryDark">@color/EasyFileChooseColorPrimaryDark</item>
        <item name="colorAccent">@color/EasyFileChooseColorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="EasyFileChoose.Path">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/EasyFileChoosePrimaryTextLight</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EasyFileChoose.ItemLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EasyFileChoose.ItemIcon" >
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="EasyFileChoose.ItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">@color/EasyFileChoosePrimaryText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
